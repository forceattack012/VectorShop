#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["server/VectorShopApp.API/src/Basket/Basket.API/Basket.API.csproj", "src/Basket/Basket.API/"]
COPY ["server/VectorShopApp.API/src/Basket/Basket.Application/Basket.Application.csproj", "src/Basket/Basket.Application/"]
COPY ["server/VectorShopApp.API/src/EventBusRabbitMQ/EventBusRabbitMQ.csproj", "src/EventBusRabbitMQ/"]
COPY ["server/VectorShopApp.API/src/Basket/Basket.Domain/Basket.Domain.csproj", "src/Basket/Basket.Domain/"]
COPY ["server/VectorShopApp.API/src/Basket/Basket.Infrastructure/Basket.Infrastructure.csproj", "src/Basket/Basket.Infrastructure/"]
RUN dotnet restore "src/Basket/Basket.API/Basket.API.csproj"
COPY . .
WORKDIR "/src/src/Basket/Basket.API"
RUN dotnet build "Basket.API.csproj" -c Release -o /app/build -r linux-64

FROM build AS publish
RUN dotnet publish "Basket.API.csproj" -c Release -o /app/publish -r linux-64

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Basket.API.dll"]